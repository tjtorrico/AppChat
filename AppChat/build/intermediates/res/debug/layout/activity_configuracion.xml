<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".Presentacion" >
    
    <TextView 
        android:id="@+id/tvTipoMensage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="Activar Mensaje Autodestructible"/>
    
    <CheckBox 
        android:id="@+id/cbMensajeAutodestructible"
        android:layout_below="@id/tvTipoMensage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Activar"/>
    
    <TextView 
        android:id="@+id/tvEsteganografia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cbMensajeAutodestructible"
        android:layout_alignParentLeft="true"
        android:text="Activar Esteganografia"/>
    
    <CheckBox 
        android:id="@+id/cbEsteganografia"
        android:layout_below="@id/tvEsteganografia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Activar"/>

</RelativeLayout><!-- From: file:/C:/Users/Jose/AndroidStudioProjects/AppChat/AppChat/src/main/res/layout/activity_configuracion.xml -->